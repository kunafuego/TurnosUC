<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "usuarios/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nombre, :class => "label"%>
      <div class="control">
      <%= f.text_field :nombre, autofocus: true, autocomplete: "nombre", :class => "input", :type => "text" %>
      </div>
  </div>

  <div class="field">
    <%= f.label :email, :class => "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= f.email_field :email, :class => "input is-danger", :type => "email", :placeholder => "Ingrese Email"%>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-exclamation-triangle"></i>
      </span>
    </div>

  <div class="field">
    <%= f.label :telefono, :class => "label" %>
    <a class="button is-static">
      +569
    </a>
    <%= f.phone_field :telefono %>
  </div>




  

  <div class="field">
    <%= f.label :direccion , :class => "label"%>
    <%= f.text_field :direccion, autofocus: true, autocomplete: "direccion" %>
  </div>

  <div class="field">
    <%= f.label :url_de_la_foto_de_perfil, :class => "label" %>
    <%= f.text_field :imagen, autofocus: true, autocomplete: "url foto de perfil" %>
  </div>

  <div class="field">
    <%= f.label :contraseña, :class => "label"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <p class="control has-icons-left">
    <%= f.password_field :password, :class => "input", :type => "password", :placeholder => "Contraseña" %>
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </p>
  </div>

  <div class="field">
    <%= f.label :confirmacion_contraseña, :class => "label" %>

    <%= f.password_field :password_confirmation, autocomplete: "confirmacion nueva contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "usuarios/shared/links" %>
